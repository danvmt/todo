<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Todo.AddItemPage"
    Title="Add a new Item">
	<ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="ItemEntry"
                Placeholder="Item" 
                Completed="Handle_Completed"/>
            <Entry x:Name="DetailEntry"
                Placeholder="Item details" 
                Completed="Handle_Completed"/>
            <Picker x:Name="PacmanPicker" 
                SelectedIndex="0"
                HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Inky</x:String> 
                    <x:String>Blinky</x:String>
                    <x:String>Pinky</x:String>
                    <x:String>Clyde</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Add"
                Clicked="Handle_Completed"/>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
